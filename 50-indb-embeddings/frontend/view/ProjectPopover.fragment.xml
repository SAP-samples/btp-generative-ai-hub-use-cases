<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core">
	<Popover
		id="myPopover"
		title="{projects>project_number}"
		class="sapUiResponsivePadding--header sapUiResponsivePadding--footer"
		placement="Bottom"
		initialFocus="email">
        <Label text="Solution"></Label>
        <Text text="{projects>solution}"></Text>
		<footer>
			<OverflowToolbar>
				<ToolbarSpacer/>
				<Button
					id="email"
					text="Email"
					press=".handleEmailPress" />
			</OverflowToolbar>
		</footer>
	</Popover>
</core:FragmentDefinition>
